<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.covit_19updates">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="AllowBackup"
        tools:targetApi="m">
        <activity
            android:name=".Activities.SearchPackage.SearchByCountry"
            android:windowSoftInputMode="stateAlwaysVisible"
            android:parentActivityName=".Activities.HomePage.DashboardActivity"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".Activities.HomePage.DashboardActivity"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="InnerclassSeparator" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ChooseCountryPackage.SelectCountryActivity"
            android:windowSoftInputMode="stateAlwaysVisible"
            tools:ignore="InnerclassSeparator" />
    </application>

</manifest>